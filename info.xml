<?xml version="1.0"?>
<extension key="org.nubay.caseclone" type="module">
  <file>caseclone</file>
  <name>CiviCase Clone</name>
  <description>Adds two 'Clone' actions to the Case actions menu. One to preserve Activities and one to regenerate the case with default activities</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Eli Lisseck</author>
    <email>lisseck@gmail.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page"/>
    <url desc="Documentation"/>
    <url desc="Support"/>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-02-16</releaseDate>
  <version>1.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.27</ver>
  </compatibility>
  <comments/>
  <civix>
    <namespace>CRM/Caseclone</namespace>
    <format>25.01.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.3</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
